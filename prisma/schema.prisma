generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Account {
  id Int @id @default(autoincrement())
  notificationPhone String
  patientPhone String
  email String

  /// How many retries before we notify the notificationPhone
  retries Int
  /// What time each day to make the check in call
  callTime DateTime
  /// Time delay between attempts
  delay DateTime

  @@unique([email])
}

model Queue {
  id Int @id @default(autoincrement())

  accountId Int
  account Account @relation(fields: [accountId], references: [id])

  /// 0 indicates that this is the first call attempt; 1+ means it's a retry.
  attemptIndex Int
  /// Whether this succeeded, failed, or hasn't happened yet
  status String
  /// When this call is going to happen/did happen
  time DateTime
}
